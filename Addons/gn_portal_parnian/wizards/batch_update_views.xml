<odoo>
    <record id="batch_update_wizard_form" model="ir.ui.view">
        <field name="name">Recalculate Project Wizard</field>
        <field name="model">gn.portal.parnian.batchupdate.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h4>
                    This action will make a new revision of the project base on
                    follwoing settings:
                    </h4>
                    <div>
                        <field name="add_to_branch"/>
                        <strong>Add to Batch Sale: </strong>
                            Revises the sale order...
                    </div>

                </sheet>
                <footer>
                    <button name="action_add_to_branch" type="object" string="Revise" class="oe_highlight" />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="batch_update_wizard_action" model="ir.actions.act_window">
        <field name="name">Batch Update</field>
        <field name="res_model">gn.portal.parnian.batchupdate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
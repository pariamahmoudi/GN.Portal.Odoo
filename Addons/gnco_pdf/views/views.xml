<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gnco_pdf.list">
      <field name="name">GNCO_pdf list</field>
      <field name="model">gnco_pdf.gnco_pdf</field>
      <field name="arch" type="xml">
        <tree>
          
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <!-- <field name="signature" widget="image"/> -->
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gnco_pdf.action_window">
      <field name="name">GNCO_pdf window</field>
      <field name="res_model">gnco_pdf.gnco_pdf</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="gnco_pdf.action_server">
      <field name="name">GNCO_pdf server</field>
      <field name="model_id" ref="model_gnco_pdf_gnco_pdf"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="GNCO_pdf" id="gnco_pdf.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="gnco_pdf.menu_1" parent="gnco_pdf.menu_root"/>
    <menuitem name="Menu 2" id="gnco_pdf.menu_2" parent="gnco_pdf.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="gnco_pdf.menu_1_list" parent="gnco_pdf.menu_1"
              action="gnco_pdf.action_window"/>
    <menuitem name="Server to list" id="gnco_pdf" parent="gnco_pdf.menu_2"
              action="gnco_pdf.action_server"/>

  </data>
</odoo>